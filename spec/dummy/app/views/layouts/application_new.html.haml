!!!5
%html
  %head


    -# WEB FONTS
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:300,400", :rel => "stylesheet prefetch", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Roboto+Condensed:300,400", :rel => "stylesheet prefetch", :type => "text/css"}

    -# YIELD: Include any head-related code from the view
    = yield :head

    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    
  %body.mobile_menu{:id => get_id_for_page(@item)}
    -# = render :partial => "/layouts/mbcms/facebook_connect"

    .container#main_container
      
      #site_body.clearfix{:role => "main"}
        %div#page

          %header#header
            - if signed_in?
              = current_user.name
              | #{link_to 'Sign out', session_path, method: :delete}
            - else
              = link_to 'Sign in', sessions_new_path

          = content_for?(:admin_content) ? yield(:admin_content) : yield

        .clear